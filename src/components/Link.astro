---
export interface Props {
  title: string,
  color?: string,
  href: string,
}
const {title, color, href} = Astro.props;
---
<li>
  <a href={href}>
    <h3>
      {title}
    </h3>
  </a>
</li>

<style>
  li {
		width: 100%;
		max-width: 400px;
		border: 2px solid #f3f4f6;		
		list-style: none;
		margin: 1.2rem 0;
	}

	a {
		font-family: 'Montserrat', sans-serif;
		text-decoration: none;
		color: #f4f4f4;
	}
	
	h3 {
		font-weight: 400;
		font-size: 0.9rem;
	}
</style>